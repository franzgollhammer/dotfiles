# theme
theme = steel-dark
background-opacity = 0.9
window-padding-x = 8
window-padding-y = 4

# keybinds
keybind = global:cmd+#=toggle_visibility

# cursor
cursor-style = block
cursor-style-blink = false

# macOS
macos-option-as-alt = true
